{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "~/*": [
        "./*",
      ],
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "include": [
    ".",
    "node_modules/@flash-card/nuxt/nuxt.config.ts"
  ],
  "exclude": [
    "dist",
  ]
}
