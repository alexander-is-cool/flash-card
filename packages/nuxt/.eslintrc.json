{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "@nuxtjs/eslint-config-typescript"
  ],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "tests/**",
          "jest.config.ts"
        ]
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "space-before-function-paren": [
      "error",
      {
        "named": "never"
      }
    ],
    "arrow-parens": [
      "error",
      "always"
    ],
    "vue/singleline-html-element-content-newline": [
      "off"
    ]
  }
}
